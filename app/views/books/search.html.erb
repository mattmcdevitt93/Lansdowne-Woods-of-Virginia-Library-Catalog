                  <% end %>
                <% else %>
                    <%= form_for(book) do |f| %>
                      <%= f.hidden_field :status, value: true %>
                      <%= f.submit 'Return Book', class: 'btn btn-default' %>
                  <% end %>
                <% end %> -->
        </div>
</div>

<% end %>