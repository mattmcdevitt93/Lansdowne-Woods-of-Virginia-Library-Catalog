
<% @search.each do |book| %>
<div class='col-md-12 search-item'>
        <div class='col-md-10'>
                <span class='Call_num'><%= book.Call_num %></span> - Copyright: (
                <span class='Copyright'><%= book.Copyright %></span>
                )
                <br>
                <span class='Title'><h3><%= book.Title %></h3></span>
                <span class='Subtitle'><%= book.Subtitle %></span>
                <hr>
                <span class='Author_last'><%= book.Author_last %>, </span>
                <span class='Author_first'><%= book.Author_first %></span>
                <br>
                <span><%= book.Subject %></span>
                <br>
                <span class='status'>
                        <% if book.status == true %>
                               Status: Checked In
                        <% elsif book.status == false %>
                               Status: Checked Out
                        <% else %>
                               <!--  Requires Update -->
                        <% end %>
                </span>
        </div>

        <div class='col-md-2'>
                <%= link_to 'More Info', book, class: 'btn btn-default' %>
