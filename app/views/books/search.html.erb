
<% @search.each do |book| %>
<div class='col-md-12 search-item'>
        <div class='col-md-10'>
                <span class='Call_num'><%= book.Call_num %></span>
                <br>
                <span class='Title'><%= book.Title %></span>
                <span class='Subtitle'><%= book.Subtitle %></span>
                <hr>
                <% if book.Author_last != "" || book.Author_first != "" %>
                <span class='Author_last'><%= book.Author_last %>, </span>
                <span class='Author_first'><%= book.Author_first %></span>
                <% end %>
                <br>
                Copyright: (<span class='Copyright'><%= book.Copyright %></span>) - Subjects: <span><%= book.Subject %></span>
                <br>
                <span><%= book.Annotation %></span>
                <div>
                <span class='status'>
                        <% if book.status == true %>
                               Status: Checked In
                        <% elsif book.status == false %>
                               Status: Checked Out
                        <% else %>
                               <!--  Requires Update -->
                        <% end %>
                </span>
                </div>
        </div>

        <div class='col-md-2'>
                <%= link_to 'More Info', book, class: 'btn btn-default' %>
