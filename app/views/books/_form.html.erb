<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<!-- Make rows even in a table -->

  <div class="field">
    <%= f.label :Call_num, class: 'form_field' %>
    <%= f.text_field :Call_num, step: 0.001  %>
  </div>
  <div class="field">
    <%= f.label :Title %>
    <%= f.text_field :Title %>
  </div>
  <div class="field">
    <%= f.label :Subtitle %>
    <%= f.text_field :Subtitle %>
  </div>
  <div class="field">
    <%= f.label :Author_last %>
    <%= f.text_field :Author_last %>
  </div>
  <div class="field">
    <%= f.label :Author_first %>
    <%= f.text_field :Author_first %>
  </div>
  <div class="field">
    <%= f.label :Copyright %>
    <%= f.number_field :Copyright %>
  </div>
  <div class="field">
    <%= f.label :Subject %>
    <%= f.text_area :Subject %>
  </div>
  <div class="field">
    <%= f.label :Annotation %>
    <%= f.text_area :Annotation %>
  </div>
  <div class="actions" >
    <%= f.submit class: 'addBtn col-md-2 btn btn-warning' %>
  </div>
<% end %>
